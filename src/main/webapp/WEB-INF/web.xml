<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Fabflix Login Service</display-name>

    <resource-ref>
        <description>MySQL DataSource Master</description>
        <res-ref-name>jdbc/MySQLReadWrite</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.example.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>org.common.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>org.example.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/api/logout</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!-- <servlet>
        <servlet-name>DashboardLoginServlet</servlet-name>
        <servlet-class>org.example.DashboardLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardLoginServlet</servlet-name>
        <url-pattern>/_dashboard/login</url-pattern>
    </servlet-mapping> -->
    <servlet>
        <servlet-name>SessionCheckServlet</servlet-name>
        <servlet-class>org.example.SessionCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionCheckServlet</servlet-name>
        <url-pattern>/api/session-check</url-pattern>
    </servlet-mapping>
    <!-- <servlet-mapping>
        <servlet-name>SessionCheckServlet</servlet-name>
        <url-pattern>/_dashboard/check-session</url-pattern>
    </servlet-mapping> -->
</web-app>